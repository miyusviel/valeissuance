<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd" name="rptDTR2Indi_notify" language="groovy" pageWidth="572" pageHeight="752" columnWidth="555" leftMargin="0" rightMargin="0" topMargin="0" bottomMargin="0" uuid="9acaa44e-bda8-4534-a44d-6fe45c81a4c8">
	<property name="ireport.zoom" value="1.0"/>
	<property name="ireport.x" value="0"/>
	<property name="ireport.y" value="0"/>
	<parameter name="dte" class="java.lang.String">
		<defaultValueExpression><![CDATA[]]></defaultValueExpression>
	</parameter>
	<parameter name="eid" class="java.lang.Integer">
		<defaultValueExpression><![CDATA[]]></defaultValueExpression>
	</parameter>
	<queryString>
		<![CDATA[SELECT


	case
    when (la.status_id=0 and ed.leave_app_id<>'') then CONCAT('LP:',la.leave_app_id)
    when (la.status_id=2 and ed.leave_app_id<>'') then CONCAT('LA:',la.leave_app_id)
    else ''
	end as lx,

    case
    when (oa.status_id=0) then CONCAT('OTP:',oa.ot_app_id)
    when (oa.status_id=2) then CONCAT('OTA:',oa.ot_app_id)
    else ''
	end as o,

	case
	when (holiday_date<>'') then 'H'
    else ''
	end as h


FROM employee e
LEFT JOIN leave_app la ON e.emp_id=la.emp_id
LEFT JOIN emp_leave_details ed ON la.leave_app_id=ed.leave_app_id AND ed.leave_date=$P{dte}
LEFT JOIN emp_ot_details eod ON e.emp_id=eod.emp_id AND eod.ot_date=$P{dte}
LEFT JOIN overtime_app oa ON eod.ot_app_id = oa.ot_app_id
LEFT JOIN year_holiday yh ON holiday_date =$P{dte}
WHERE e.emp_id=$P{eid}  GROUP BY  o and lx]]>
	</queryString>
	<field name="lx" class="java.lang.String"/>
	<field name="o" class="java.lang.String"/>
	<field name="h" class="java.lang.String"/>
	<variable name="concat" class="java.lang.String"/>
