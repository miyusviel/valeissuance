	<queryString>
		<![CDATA[select t.emp_id, left(dayname(log_date_time),3) as day,

	min(if(time(log_date_time) between time(in1_log_start) and time(in1_log_end) ,log_date_time,null)) as login_am,

    max(if(time(log_date_time) between time(out1_log_start) and time(out1_log_end) ,log_date_time,null)) as logout_am,

    min(if(time(log_date_time) between time(in2_log_start) and time(in2_log_end) ,log_date_time,null)) as login_pm,

    max(if(time(log_date_time) between time(out2_log_start) and time(out2_log_end) ,log_date_time,null)) as logout_pm
from time_log t inner join employee_shift e on t.emp_id=e.emp_id
inner join shift s on e.shift_id=s.shift_id
where t.emp_id=177 and year(log_date_time)=2014 and month(log_date_time)=05
group by date(log_date_time) order by log_date_time ;]]>
